<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="0dp"
                android:paddingRight="16dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="pl.rcebula.volumecontroller.PolskastacjaControllerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/songListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/copyToClipboardbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ERROR HERE"
        android:id="@+id/errorTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/songListView"
        android:textColor="#ff0000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="copy current to clipboard"
        android:id="@+id/copyToClipboardbutton"
        android:layout_above="@+id/errorTextView"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
