<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             tools:context="pl.rcebula.volumecontroller.UrlControllerFragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin" >

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/openButton"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/closeButton"
        android:layout_alignTop="@+id/openButton"
        android:layout_alignEnd="@+id/radioGroup"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ERROR HERE"
        android:id="@+id/errorTextView"
        android:textColor="#ffff0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shutdown computer"
        android:id="@+id/shutdownButton"
        android:layout_below="@+id/openButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/closeButton"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL 1"
            android:id="@+id/url1RadioButton"
            android:checked="true"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL 2"
            android:id="@+id/url2RadioButton"
            android:singleLine="true"
            android:layout_below="@+id/url1RadioButton"
            android:layout_alignParentStart="true"/>

    </RadioGroup>

</RelativeLayout>
